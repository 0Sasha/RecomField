@model Review
@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.AspNetCore.Identity;
@inject IHtmlLocalizer<SharedResource> Localizer
@inject UserManager<ApplicationUser> userManager
@{
    var appUser = await userManager.GetUserAsync(User);
    ViewData["Title"] = @Localizer["Review"];
}

<div class="container-fluid ">
    <div class="row">
        <div class="col-md-10">
            <h1>@Model.Title</h1>
            <h2>
                By <a asp-controller="User" asp-route-id="@Model.AuthorId">@Model.Author.UserName</a> on @Model.PublicationDate.ToString("MMM dd, yyyy")
            </h2>
            <h5 id="tagsLine" class="mt-3 mb-2">
                @foreach (var t in Model.Tags)
                {
                    var s = "[" + t.Body + "]";
                    <span role="button" class='badge text-bg-primary mb-1' onclick="search('@s')">@t.Body</span>
                }
            </h5>
            <h1 class="mb-3">
                @if (Model.Score.Value > 6)
                {
                    <span class="badge bg-success">
                        @Model.Score.Value/10
                    </span>
                }
                else
                {
                    <span class="badge bg-warning">
                        @Model.Score.Value/10
                    </span>
                }
            </h1>
        </div>
        <div class="col-md align-content-end align-items-end text-center">
            @if (Model.Product?.Cover?.Length > 0)
            {
                <img src="@Model.Product.Cover" style="width:100%;"/>
            }
            @{
                var title = Model.Product.Title.Length > 25 ? Model.Product.Title[..25] + "..." : Model.Product.Title;
            }
            <h5><a asp-action="Index" asp-controller="Product" asp-route-id="@Model.ProductId">@title</a></h5>
            <h4>
                @{
                    var rev = @Model.Product.AverageReviewScore > 0.1 ? @Model.Product.AverageReviewScore.ToString() + "/10" : "n/10";
                    var us = @Model.Product.AverageUserScore > 0.1 ? @Model.Product.AverageUserScore.ToString() + "/5" : "n/5";
                }
                @if (@Model.Product.AverageReviewScore >= 7)
                {
                    <span class="badge text-bg-success fw-bold">@rev</span>
                }
                else
                {
                    <span class="badge text-bg-warning fw-bold">@rev</span>
                }
                @if (@Model.Product.AverageUserScore >= 3.5)
                {
                    <span class="badge text-bg-success fw-bold">@us</span>
                }
                else
                {
                    <span class="badge text-bg-warning fw-bold">@us</span>
                }
            </h4>
            <h6>Your score</h6>
            @if (appUser != null)
            {
                for (int i = 1; i <= 5; i++)
                {
                    <a role="button" class="btn btn-sm btn-light mb-1" style="max-width:26px; max-height:26px" name="rateBtn" onclick="changeRateProd('@i', '@Model.Product.Id')">
                        <img src="~/icons/star.svg" style="max-width:20px; max-height:20px" aria-hidden="true" />
                    </a>
                }
                var s = Model.Product.UserScores.SingleOrDefault(s => s.Sender == appUser);
                if (s != null)
                {
                    <script>
                        setInitRateProd('@s.Value');
                    </script>
                }
            }
            else for (int i = 1; i <= 5; i++)
            {
                <a class="btn btn-sm btn-light mb-1" style="max-width:26px; max-height:26px" asp-area="Identity" asp-page="/Account/Login">
                    <img src="~/icons/star.svg" style="max-width:20px; max-height:20px" aria-hidden="true" />
                </a>
            }
        </div>
    </div>
    <hr />
    <div class="row">
        @Html.Raw(@Model.Body)
    </div>
    <div class="row">
        <div class="col">
            @if (Model.Author == appUser || User.IsInRole("Admin"))
            {
                <div class="float-end" role="group">
                    <a class="btn btn-sm btn-danger mb-1" style="min-width:80px" asp-controller="Review" asp-action="RemoveReview" asp-route-id="@Model.Id">@Localizer["Remove"]</a>
                    <a class="btn btn-sm btn-primary mb-1" style="min-width:80px" asp-controller="Review" asp-action="EditReview" asp-route-id="@Model.Id">@Localizer["Edit"]</a>
                    <a class="btn btn-sm btn-primary mb-1" style="min-width:90px" asp-controller="Review" asp-action="ConvertToPDF" asp-route-id="@Model.Id">@Localizer["Convert to PDF"]</a>
                </div>
            }
            else
            {
                <a class="btn btn-sm btn-primary float-end" style="min-width:90px" asp-controller="Review" asp-action="ConvertToPDF" asp-route-id="@Model.Id">@Localizer["Convert to PDF"]</a>
            }
        </div>
    </div>
    <hr />
    <div class="row">
        <div class="col-8">
            <div class="row">
                <div class="col-auto">
                    <h3>
                        <a asp-controller="User" asp-route-id="@Model.AuthorId">@Model.Author.UserName</a>
                        <small class="text-muted">on @Model.PublicationDate.ToString("MMM dd, yyyy")</small>
                    </h3>
                </div>
            </div>
        </div>
        <div class="col align-items-end text-end">
            <h4>
                @if (appUser != null)
                {
                    <span role="button" class="badge text-bg-secondary" onclick="changeLike('@Model.Id')">
                        @{
                            var id = User.Claims.First().Value;
                            if (Model.Likes.Count > 0 && Model.Likes.Any(l => l.SenderId == id))
                            {
                                <img id="likeIcon" src="~/icons/thumb white full.svg" aria-label="Liked" style="max-width:20px; max-height:20px;">
                            }
                            else
                            {
                                <img id="likeIcon" src="~/icons/thumb white.svg" aria-label="" style="max-width:20px; max-height:20px;">
                            }
                        }
                        <small class="fw-bold" id="likeCount">@Model.LikeCounter</small>
                    </span>
                }
                else
                {
                    <a asp-area="Identity" asp-page="/Account/Login" class="badge text-bg-secondary fw-bold">
                        <img src="~/icons/thumb white.svg" aria-label="" style="max-width:20px; max-height:20px;">
                        <small class="fw-bold" id="likeCount">@Model.LikeCounter</small>
                    </a>
                }
            </h4>
        </div>
    </div>
    <div id="similarDiv" class="row" hidden>
        <h4>Other reviews on @Model.Product.Title</h4>
        <table class="table table-striped table-hover align-middle">
            <thead>
                <tr>
                    <th>Author</th>
                    <th>Title</th>
                    <th>Score</th>
                    <th>Likes</th>
                </tr>
            </thead>
            <tbody id="tbodyReviews"></tbody>
        </table>
        <hr />
    </div>
    <div class="row">
        <div id="reviewComments">
        </div>
    </div>
</div>

<script async>
    loadSimilarReviews('@Model.Id');
    showMoreComments('@Model.Id', 10);
</script>
