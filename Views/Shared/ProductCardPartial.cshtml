@model Product

@if (Model.Cover?.Length > 0)
{
    <a asp-action="Index" asp-controller="Product" asp-route-id="@Model.Id">
        <img src="@Model.Cover" style="width:100%;" />
    </a>
}
@{
    var title = Model.Title?.Length > 25 ? Model.Title[..25] + "..." : Model.Title;
}
<h5 class="mb-0"><a asp-action="Index" asp-controller="Product" asp-route-id="@Model.Id">@title</a></h5>
<h4 class="mb-0">
    @{
        var rev = Model.AverageReviewScore > 0.1 ? Model.AverageReviewScore.ToString("F2") + "/10" : "n/10";
        var us = Model.AverageUserScore > 0.1 ? Model.AverageUserScore.ToString("F2") + "/5" : "n/5";
    }
    @if (@Model.AverageReviewScore >= 7)
    {
        <span class="badge text-bg-success" style="min-width:85px">@rev</span>
    }
    else
    {
        <span class="badge text-bg-warning" style="min-width:85px">@rev</span>
    }
    @if (@Model.AverageUserScore >= 3.5)
    {
        <span class="badge text-bg-success" style="min-width:85px">@us</span>
    }
    else
    {
        <span class="badge text-bg-warning" style="min-width:85px">@us</span>
    }
</h4>
