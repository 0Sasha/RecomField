@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Mvc.Localization
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@inject IHtmlLocalizer<SharedResource> Localizer

<ul class="navbar-nav justify-content-end" style="min-width:270px">
@if (SignInManager.IsSignedIn(User))
{
    if (User.IsInRole("Admin"))
    {
        <li class="nav-item">
                <a class="nav-link" asp-controller="User" asp-action="AdminPage">@Localizer["Administration"]</a>
        </li>
    }
    <li class="nav-item">
        <a class="nav-link" asp-controller="User" asp-action="Index"asp-route-id="">@User.Identity?.Name</a>
    </li>
    <li class="nav-item">
        <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="nav-link btn btn-link">@Localizer["Logout"]</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link" asp-area="Identity" asp-page="/Account/Login">@Localizer["Sign in"]</a>
    </li>
}
</ul>
