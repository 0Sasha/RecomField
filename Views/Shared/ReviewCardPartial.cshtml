@model Review

<div class="row" style="font-size:120%; font-weight:500">
    <div class="col">
        @Model.Title
    </div>
</div>
<div class="row" style="font-size:100%; font-weight:500">
    <div class="col">
        By @Model.Author?.UserName
    </div>
</div>
<div class="row" style="font-size:150%">
    <div class="col-auto">
        @if (Model.Score?.Value >= 7)
        {
            <span class="badge text-bg-success rounded-3">@Model.Score?.Value/10</span>
        }
        else
        {
            <span class="badge text-bg-warning rounded-3">@Model.Score?.Value/10</span>
        }
        @await Html.PartialAsync("LikesPartialMini", Model.LikeCounter)
    </div>
</div>
