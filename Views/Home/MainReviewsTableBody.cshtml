@model IEnumerable<Review>

@foreach (var review in Model)
{
    <tr>
        <td>
            <a asp-controller="Product" asp-action="Index" asp-route-id="@review.ProductId">
                @await Html.PartialAsync("ProductCardPartialMini", review.Product)
            </a>
        </td>
        <td>
            <a asp-controller="Review" asp-action="Index" asp-route-id="@review.Id">
                @review.Title
            </a>
        </td>
        <td>@await Html.PartialAsync("ScorePartial", review.Score?.Value)</td>
        <td>@await Html.PartialAsync("LikesPartial", review.LikeCounter)</td>
    </tr>
}
