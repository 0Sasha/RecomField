@model IEnumerable<Review>
@using Microsoft.AspNetCore.Mvc.Localization
@inject IHtmlLocalizer<SharedResource> Localizer
@{
    ViewData["Title"] = @Localizer["Home Page"];
}

<script src="//cdn.amcharts.com/lib/4/core.js"></script>
<script src="//cdn.amcharts.com/lib/4/charts.js"></script>
<script src="//cdn.amcharts.com/lib/4/plugins/wordCloud.js"></script>
<div id="tagCloud" style="height:600px"></div>
<hr />

<h3>New reviews</h3>
<div class="row">
    <table class="table table-striped table-hover align-middle">
        <thead>
            <tr>
                <th scope="col">Product</th>
                <th scope="col">Title</th>
                <th scope="col">Score</th>
                <th scope="col">Date</th>
            </tr>
        </thead>
        <tbody>
            @await Html.PartialAsync("MainReviewsTableBody")
        </tbody>
    </table>
</div>
<hr />

<h3>Reviews with the highest scores</h3>
<div class="row">
    <table class="table table-striped table-hover align-middle">
        <thead>
            <tr>
                <th scope="col">Product</th>
                <th scope="col">Title</th>
                <th scope="col">Score</th>
                <th scope="col">Date</th>
            </tr>
        </thead>
        <tbody id="tbodyReviews">
        </tbody>
    </table>
</div>

<script src="~/js/home.js" async></script>