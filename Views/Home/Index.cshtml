@model IEnumerable<Product>
@using Microsoft.AspNetCore.Mvc.Localization
@inject IHtmlLocalizer<SharedResource> Localizer
@{
    ViewData["Title"] = @Localizer["Home Page"];
}

<script src="//cdn.amcharts.com/lib/4/core.js"></script>
<script src="//cdn.amcharts.com/lib/4/charts.js"></script>
<script src="//cdn.amcharts.com/lib/4/plugins/wordCloud.js"></script>

<div class="container-fluid">
    <div class="row">
        <div id="tagCloud" style="height:600px"></div>
    </div>
    <hr />

    <h1 class="mb-4 h-gold">@Localizer["Top movies"]</h1>
    <div class="row">
        @await Html.PartialAsync("BestProductsPartial")
    </div>
    <hr />

    <h1 class="mb-4 h-gold">@Localizer["Top series"]</h1>
    <div class="row" id="rowBestSeries"></div>
    <hr />

    <h1 class="mb-4 h-gold">@Localizer["Top games"]</h1>
    <div class="row" id="rowBestGames"></div>
    <hr />

    <h1 class="mb-4 h-gold">@Localizer["Top books"]</h1>
    <div class="row" id="rowBestBooks"></div>
    <hr />

    <h1 class="h-gold">@Localizer["New reviews"]</h1>
    <div class="row">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th class="col-7" scope="col">@Localizer["Product"]</th>
                    <th scope="col">@Localizer["Review"]</th>
                </tr>
            </thead>
            <tbody id="tbodyNewReviews">
            </tbody>
        </table>
    </div>
    <hr />

    <h1 class="h-gold">@Localizer["Top reviews"]</h1>
    <div class="row">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th class="col-7" scope="col">@Localizer["Product"]</th>
                    <th scope="col">@Localizer["Review"]</th>
                </tr>
            </thead>
            <tbody id="tbodyLikedReviews">
            </tbody>
        </table>
    </div>
    <hr />

    <h1 class="h-gold">@Localizer["Reviews with the highest scores"]</h1>
    <div class="row">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th class="col-7" scope="col">@Localizer["Product"]</th>
                    <th scope="col">@Localizer["Review"]</th>
                </tr>
            </thead>
            <tbody id="tbodyHighScoresReviews">
            </tbody>
        </table>
    </div>
</div>

<script src="~/js/home.js"></script>
<script>
    initTagCloud('@ViewData["Tags"]');
    loadPartialViews();
</script>
