@model (Movie[], string)
@using Microsoft.AspNetCore.Mvc.Localization
@inject IHtmlLocalizer<SharedResource> Localizer
@{
    ViewData["Title"] = @Localizer["Home Page"];
}

<script src="//cdn.amcharts.com/lib/4/core.js"></script>
<script src="//cdn.amcharts.com/lib/4/charts.js"></script>
<script src="//cdn.amcharts.com/lib/4/plugins/wordCloud.js"></script>

<div class="container-fluid">
    <div class="row">
        <div id="tagCloud" style="height:600px"></div>
    </div>
    <hr />

    <h1 class="fw-bolder mb-3" style="color:#cc9900">Best movies</h1>
    <div class="row">
        @await Html.PartialAsync("BestProductsPartial", Model.Item1)
    </div>
    <hr />

    <h1 class="fw-bolder mb-3" style="color:#cc9900">Best series</h1>
    <div class="row" id="rowBestSeries"></div>
    <hr />

    <h1 class="fw-bolder mb-3" style="color:#cc9900">Best games</h1>
    <div class="row" id="rowBestGames"></div>
    <hr />

    <h1 class="fw-bolder mb-3" style="color:#cc9900">Best books</h1>
    <div class="row" id="rowBestBooks"></div>
    <hr />

    <h1 class="fw-bolder" style="color:#cc9900">New reviews</h1>
    <div class="row">
        <table class="table table-striped table-hover align-middle">
            <thead>
                <tr>
                    <th class="col-7" scope="col">Product</th>
                    <th scope="col">Review</th>
                </tr>
            </thead>
            <tbody id="tbodyNewReviews">
            </tbody>
        </table>
    </div>
    <hr />

    <h1 class="fw-bolder" style="color:#cc9900;">Most liked reviews</h1>
    <div class="row">
        <table class="table table-striped table-hover align-middle">
            <thead>
                <tr>
                    <th class="col-7" scope="col">Product</th>
                    <th scope="col">Review</th>
                </tr>
            </thead>
            <tbody id="tbodyLikedReviews">
            </tbody>
        </table>
    </div>
    <hr />

    <h1 class="fw-bolder" style="color:#cc9900;">Reviews with the highest scores</h1>
    <div class="row">
        <table class="table table-striped table-hover align-middle">
            <thead>
                <tr>
                    <th class="col-7" scope="col">Product</th>
                    <th scope="col">Review</th>
                </tr>
            </thead>
            <tbody id="tbodyHighScoresReviews">
            </tbody>
        </table>
    </div>
</div>

<script src="~/js/home.js"></script>
<script>
    initTagCloud("@Model.Item2");
    loadPartialViews();
</script>
