@model Product
@using Microsoft.AspNetCore.Mvc.Localization

<form asp-action="AddProduct">
    <div class="row g-2 mb-3">
        <div class="col-md-12 form-floating">
            <input asp-for=Title class="form-control" type="text" placeholder="Title" required />
            <label asp-for="Title" class="form-label">Title</label>
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div class ="col-6 form-floating">
            <select asp-for=Type class="form-select">
                @foreach (var t in Enum.GetValues(typeof(Product.ProductType)))
                {
                    <option value=@t>@t</option>
                }
            </select>
            <label class="form-label">Type</label>
        </div>
        <div class="col-6 form-floating">
            <input asp-for=ReleaseYear class="form-control" type="number" min="0" placeholder="Release year" required />
            <label asp-for="ReleaseYear" class="form-label">Release year</label>
            <span asp-validation-for="ReleaseYear" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group mb-3">
        <textarea asp-for=Description class="form-control" rows="12" placeholder="Description">@Model.Description</textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <button class="btn btn-primary float-end" type="submit" style="min-width:100px">Save product</button>
</form>