@model (List<ApplicationUser>, List<IdentityUserRole<string>>, int)
@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.AspNetCore.Identity;
@inject IHtmlLocalizer<SharedResource> Localizer
@inject UserManager<ApplicationUser> userManager
@{
    ViewData["Title"] = Localizer["Administration"];
}

<div class="container-fluid">
    <div class="row justify-content-between">
        <div class="col-auto">
            <h4 class="mt-1">Users <small class="text-muted" style="font-size:medium">@Model.Item3</small></h4>
        </div>
        <div class="col-auto">
            <div class="row justify-content-end">
                <div class="col-auto">
                    <div class="input-group mb-3">
                        <input type="search" class="form-control float-end" id="searchUser" placeholder="Search user" oninput="updateUsers()" style="max-width:250px" />
                        <select class="form-select float-end" style="max-width:200px" id="typeUsers" onchange="updateUsers()">
                            <option value="All" selected>All</option>
                            <option value="Admins">Admins</option>
                            <option value="Blocked">Blocked</option>
                        </select>
                    </div>
                </div>
                <div class="col-auto">
                    <select class="form-select float-end" style="max-width:70px" id="countUsers" onchange="updateUsers()">
                        <option value="10" selected>10</option>
                        <option value="50">50</option>
                        <option value="0">All</option>
                    </select>
                </div>
            </div>
        </div>
    </div>
    <table id="users" class="table table-striped table-hover align-middle">
        <thead>
            <tr>
                <th class="col-6" scope="col">Name</th>
                <th scope="col">Role</th>
                <th scope="col">Status</th>
            </tr>
        </thead>
        <tbody id="tbodyUsers">
            @await Html.PartialAsync("UsersTableBody", (Model.Item1, Model.Item2))
        </tbody>
    </table>
</div>
