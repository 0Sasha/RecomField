@model Review
@using Microsoft.AspNetCore.Mvc.Localization
@inject IHtmlLocalizer<SharedResource> Localizer
@{
    ViewData["Title"] = @Localizer["Edit review"];
}

<div class="container-fluid mb-5">
    <form asp-action="NewReview">
        <div class="row g-2 mb-3">
            <div class="col-md-3">
                <button class="btn btn-primary w-100" type="button" onclick="updateProductsModal('')" data-bs-toggle="modal" data-bs-target="#productsModal">Select product</button>
            </div>
            <div class="col-md">
                <input class="form-control" placeholder="Product title" id="titleProd" readonly>
            </div>
            <div class="col-md-2">
                <input class="form-control" placeholder="Product type" id="typeProd" readonly>
            </div>
            <div class="col-md-2">
                <input class="form-control" placeholder="Release year" id="releaseProd" readonly>
            </div>
        </div>
        <hr />
        <div class=" row g-2">
            <div class="col-md">
                <h5>Title </h5>
                <div class="form-floating mb-2">
                    <input asp-for=Title class="form-control" style="font-weight:bolder" type="text" placeholder="Review title" value="@Model.Title" required />
                    <label asp-for="Title" class="form-label">Review title</label>
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md">
                <h5>Tags </h5>
                <div class="form-floating mb-2">
                    <input class="form-control" type="text" id="tagForm" placeholder="Write tags separated by commas" maxlength="50" onchange="addTag()" onkeyup="checkTag()" />
                    <label class="form-label">Write tags separated by commas</label>
                </div>
                <h5 id="tagsLine"></h5>
            </div>
        </div>
        <hr />
        <h5 id="tagsLine">Review</h5>
        <div class="form-group mb-3">
            <textarea asp-for=Body id="tiny" class="form-control" rows="12" placeholder="Review"></textarea>
            <span asp-validation-for="Body" class="text-danger"></span>
        </div>
        <div hidden>
            <input name="ProductIdForServer" id="ProductIdForServer" required/>
            <input name="TagsForServer" id="TagsForServer" required />
            <input name="RateForServer" id="RateForServer" required />
        </div>
        <hr />
        <h5 class="mt-2" id="myRating">Rating: -/10</h5>
        @for (int i = 1; i <= 10; i++)
        {
            <a role="button" class="btn btn-sm btn-light align-self-center mb-1" data-attr='@i' name="rateBtn" onclick="changeRate('@i')">
                <img class="align-self-center" src="~/icons/star.svg" style="max-width:17px; max-height:17px" aria-hidden="true" />
            </a>
        }
        <hr />
        <button class="btn btn-primary float-end" type="submit" style="min-width:100px">Send</button>
    </form>
</div>

<div class="modal fade" id="productsModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5">Select product</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="input-group mb-3">
                    <div class="form-floating">
                        <input id="searchProductsModal" class="form-control" placeholder="Search" onkeyup="updateProductsModal()" />
                        <label class="form-label">Search</label>
                    </div>
                </div>
                <table class="table table-striped table-hover align-middle">
                    <thead>
                        <tr>
                            <th class="col-1" scope="col">Type</th>
                            <th scope="col">Title</th>
                            <th class="col-1" scope="col">Release</th>
                        </tr>
                    </thead>
                    <tbody id="tbodyProductsModal">

                    </tbody>
                </table>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-toggle="modal" data-bs-target="#addProductModal">Add new product</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="addProductModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5">Add product</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                @await Html.PartialAsync("AddProductForm", new Product())
            </div>
        </div>
    </div>
</div>