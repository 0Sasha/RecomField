@model ApplicationUser
@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.AspNetCore.Identity;
@inject IHtmlLocalizer<SharedResource> Localizer
@inject UserManager<ApplicationUser> userManager
@{
    var u = await userManager.GetUserAsync(User);
    ViewData["Title"] = u == Model ? Localizer["My page"] : Model.UserName;
    bool authorOrAdmin = u == Model || u != null && await userManager.IsInRoleAsync(u, "Admin");
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md">
            <h1 class="card-title">@Model.UserName</h1>
        </div>
        @if (authorOrAdmin)
        {
            <div class="col-md">
                <div class="float-end" role="group">
                    <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                        @Localizer["Add product"]
                    </button>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" asp-action="AddMovie" asp-controller="Product">@Localizer["Movie"]</a></li>
                        <li><a class="dropdown-item" asp-action="AddSeries" asp-controller="Product">@Localizer["Series"]</a></li>
                        <li><a class="dropdown-item" asp-action="AddBook" asp-controller="Product">@Localizer["Book"]</a></li>
                        <li><a class="dropdown-item" asp-action="AddGame" asp-controller="Product">@Localizer["Game"]</a></li>
                    </ul>
                    <a type="button" class="btn btn-primary" asp-controller="Review" asp-action="AddReview" asp-route-authorId="@Model.Id">@Localizer["Write a review"]</a>
                </div>
            </div>
        }
    </div>
    <div class="row">
        <div class="col-md mb-1">
            <h5 class="card-subtitle">
                @await Html.PartialAsync("LikesPartial", @Model.ReviewLikes)
                for @Model.Reviews.Count reviews
            </h5>
        </div>
    </div>
    <hr />
    <div class="row justify-content-between">
        <div class="col-4">
            <h4 class="mt-1">Reviews</h4>
        </div>
        <div class="col">
            <input type="text" class="form-control float-end" id="searchReview" placeholder="Search a review" onkeyup="updateReviews('@Model.Id')" style="max-width:250px" />
        </div>
    </div>
    <div class="row">
        <table id="userReviews" dirSort="asc" class="table table-striped table-hover align-middle">
            <thead>
                <tr>
                    <th role="button" scope="col" onclick="sortTable(0, 'userReviews')">
                        <div class="row justify-content-between align-items-center">
                            <div class="col-auto">
                                Product
                            </div>
                            <div class="col-auto">
                                <img src="~/icons/sort gray.svg" style="max-width:22px; max-height:22px" />
                            </div>
                        </div>
                    </th>
                    <th role="button" scope="col" onclick="sortTable(1, 'userReviews')">
                        <div class="row justify-content-between align-items-center">
                            <div class="col-auto">
                                Title
                            </div>
                            <div class="col-auto">
                                <img src="~/icons/sort gray.svg" style="max-width:22px; max-height:22px" />
                            </div>
                        </div>
                    </th>
                    <th role="button" scope="col" onclick="sortTable(2, 'userReviews')">
                        <div class="row justify-content-between align-items-center">
                            <div class="col-auto">
                                Score
                            </div>
                            <div class="col-auto">
                                <img src="~/icons/sort gray.svg" style="max-width:22px; max-height:22px" />
                            </div>
                        </div>
                    </th>
                    <th role="button" scope="col" onclick="sortTable(3, 'userReviews')">
                        <div class="row justify-content-between align-items-center">
                            <div class="col-auto">
                                Likes
                            </div>
                            <div class="col-auto">
                                <img src="~/icons/sort gray.svg" style="max-width:22px; max-height:22px" />
                            </div>
                        </div>
                    </th>
                    <th role="button" scope="col" onclick="sortTable(4, 'userReviews')">
                        <div class="row justify-content-between align-items-center">
                            <div class="col-auto">
                                Date
                            </div>
                            <div class="col-auto">
                                <img src="~/icons/sort gray.svg" style="max-width:22px; max-height:22px" />
                            </div>
                        </div>
                    </th>
                </tr>
            </thead>
            <tbody id="tbodyReviews">
                @await Html.PartialAsync("ReviewsTableBody", (Model.Reviews.AsEnumerable().Reverse(), authorOrAdmin))
            </tbody>
        </table>
    </div>
</div>
