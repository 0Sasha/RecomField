@model ApplicationUser
@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.AspNetCore.Identity;
@inject IHtmlLocalizer<SharedResource> Localizer
@inject UserManager<ApplicationUser> userManager
@{
    var u = await userManager.GetUserAsync(User);
    ViewData["Title"] = u == Model ? Localizer["My page"] : Model.UserName;
    bool authorOrAdmin = u == Model || u != null && await userManager.IsInRoleAsync(u, "Admin");
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md">
            <h1 class="mb-0">@Model.UserName
                @await Html.PartialAsync("LikesPartial", @Model.ReviewLikes)
                <small class="text-muted" style="font-size:large">for @Model.Reviews.Count reviews</small>
            </h1>
        </div>
        @if (authorOrAdmin)
        {
            <div class="col-md">
                <div class="float-end mt-2" role="group">
                    <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                        @Localizer["Add product"]
                    </button>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" asp-action="AddMovie" asp-controller="Product">@Localizer["Movie"]</a></li>
                        <li><a class="dropdown-item" asp-action="AddSeries" asp-controller="Product">@Localizer["Series"]</a></li>
                        <li><a class="dropdown-item" asp-action="AddBook" asp-controller="Product">@Localizer["Book"]</a></li>
                        <li><a class="dropdown-item" asp-action="AddGame" asp-controller="Product">@Localizer["Game"]</a></li>
                    </ul>
                    <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#productsModal" onclick="updateProductsModal('@Model.Id')">@Localizer["Write a review"]</button>
                </div>
            </div>
        }
    </div>
    <hr />
    <div class="row justify-content-between">
        <div class="col-auto">
            <h4>Reviews</h4>
        </div>
        <div class="col-auto">
            <div class="row justify-content-end">
                <div class="col">
                    <div class="input-group" style="min-width:250px">
                        <span class="input-group-text">Sorted by</span>
                        <select id="sortedSel" ascOrder="true" class="form-select" onchange="updateReviews()">
                            <option value="date" selected>Date</option>
                            <option value="title">Title</option>
                            <option value="likes">Likes</option>
                            <option value="score">Score</option>
                        </select>
                        <span role="button" class="input-group-text" onclick="changeOrderSort()">
                            <img src="~/icons/sort gray.svg" style="max-width:22px" />
                        </span>
                    </div>
                </div>
                <div class="col">
                    <input type="search" class="form-control float-end" id="searchReview" userId="@Model.Id" placeholder="Search a review" oninput="updateReviews()" style="max-width:250px" />
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <table id="userReviews" dirSort="asc" class="table table-striped table-hover align-middle">
            <thead>
                <tr>
                    <th>Product</th>
                    <th>Review</th>
                </tr>
            </thead>
            <tbody id="tbodyReviews">
                @await Html.PartialAsync("ReviewsTableBody", (Model.Reviews.AsEnumerable().Reverse(), authorOrAdmin))
            </tbody>
        </table>
    </div>
</div>

<div class="modal fade" id="productsModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5">Select product</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="input-group mb-3">
                    <div class="form-floating">
                        <input id="searchProductsModal" class="form-control" placeholder="Search" onkeyup="updateProductsModal('@Model.Id')" />
                        <label class="form-label">Search</label>
                    </div>
                </div>
                <table class="table table-striped table-hover align-middle">
                    <tbody id="tbodyProductsModal">
                    </tbody>
                </table>
            </div>
            <div class="modal-footer">
                <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                    @Localizer["Add product"]
                </button>
                <ul class="dropdown-menu">
                    <li><a class="dropdown-item" asp-action="AddMovie" asp-controller="Product">@Localizer["Movie"]</a></li>
                    <li><a class="dropdown-item" asp-action="AddSeries" asp-controller="Product">@Localizer["Series"]</a></li>
                    <li><a class="dropdown-item" asp-action="AddBook" asp-controller="Product">@Localizer["Book"]</a></li>
                    <li><a class="dropdown-item" asp-action="AddGame" asp-controller="Product">@Localizer["Game"]</a></li>
                </ul>
            </div>
        </div>
    </div>
</div>
