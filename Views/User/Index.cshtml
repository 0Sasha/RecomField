@model ApplicationUser
@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.AspNetCore.Identity;
@inject IHtmlLocalizer<SharedResource> Localizer
@inject UserManager<ApplicationUser> userManager
@{
    var u = await userManager.GetUserAsync(User);
    ViewData["Title"] = u == Model ? Localizer["My page"] : Model.UserName;
    bool admin = u == Model || await userManager.IsInRoleAsync(u, "Admin");
}

<div class="container-fluid">
    <div class="row">
        <h1 class="card-title">@Model.UserName</h1>
    </div>
    <div class="row mb-1">
        <div class="col-md mb-1">
            <h5 class="card-subtitle">
                <span class="badge text-bg-secondary fw-bold align-middle">
                    <img src="~/icons/thumb white full.svg" aria-label="Likes" style="max-width:16px; max-height:16px;">
                    @Model.ReviewLikes
                </span>
                for @Model.Reviews.Count reviews
            </h5>
        </div>
        @if (admin)
        {
            <div class="col-md">
                <div class="btn-group float-end" role="group">
                    <a type="button" class="btn btn-primary" href="">@Localizer["App product"]</a>
                    <a type="button" class="btn btn-primary" asp-controller="Review" asp-action="EditReview">@Localizer["Write a review"]</a>
                </div>
            </div>
        }
    </div>
    <hr />
    <div class="row justify-content-between">
        <div class="col-4">
            <h4 class="mt-1">Reviews</h4>
        </div>
        <div class="col">
            <input type="text" class="form-control float-end" id="searchReview" placeholder="Search a review" onkeyup="updateReviews('@Model.Id')" style="max-width:250px" />
        </div>
    </div>
    <div class="row">
        <table id="userReviews" dirSort="asc" class="table table-striped table-hover align-middle">
            <thead>
                <tr>
                    <th role="button" scope="col" onclick="sortUserReviews(0)">
                        <div class="row justify-content-between align-items-center">
                            <div class="col-auto">
                                Product
                            </div>
                            <div class="col-auto">
                                <img src="~/icons/sort gray.svg" style="max-width:22px; max-height:22px" />
                            </div>
                        </div>
                    </th>
                    <th role="button" scope="col" onclick="sortUserReviews(1)">
                        <div class="row justify-content-between align-items-center">
                            <div class="col-auto">
                                Title
                            </div>
                            <div class="col-auto">
                                <img src="~/icons/sort gray.svg" style="max-width:22px; max-height:22px" />
                            </div>
                        </div>
                    </th>
                    <th role="button" scope="col" onclick="sortUserReviews(2)">
                        <div class="row justify-content-between align-items-center">
                            <div class="col-auto">
                                Score
                            </div>
                            <div class="col-auto">
                                <img src="~/icons/sort gray.svg" style="max-width:22px; max-height:22px" />
                            </div>
                        </div>
                    </th>
                    <th role="button" scope="col" onclick="sortUserReviews(3)">
                        <div class="row justify-content-between align-items-center">
                            <div class="col-auto">
                                Likes
                            </div>
                            <div class="col-auto">
                                <img src="~/icons/sort gray.svg" style="max-width:22px; max-height:22px" />
                            </div>
                        </div>
                    </th>
                    <th role="button" scope="col" onclick="sortUserReviews(4)">
                        <div class="row justify-content-between align-items-center">
                            <div class="col-auto">
                                Date
                            </div>
                            <div class="col-auto">
                                <img src="~/icons/sort gray.svg" style="max-width:22px; max-height:22px" />
                            </div>
                        </div>
                    </th>
                </tr>
            </thead>
            <tbody id="tbodyReviews">
                @await Html.PartialAsync("ReviewsTableBody", (Model.Reviews.AsEnumerable().Reverse(), admin))
            </tbody>
        </table>
    </div>
</div>
